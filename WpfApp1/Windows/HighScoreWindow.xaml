<Window x:Class="WpfApp1.Windows.HighScoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Windows"
        mc:Ignorable="d"
        Title="HighScores" Height="600" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        <ListBox x:Name="lbHighScores" Height="500"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="30" Margin="0,20,0,5">
            <Button x:Name="btnReset" Width="100" Content="Reset" FontSize="16" Margin="0,0,5,0" Click="BtnReset_Click"/>
            <Button x:Name="btnCancel" Width="100" Content="Cancel" FontSize="16" Margin="5,0,0,0" Click="BtnCancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
