<Window x:Class="WpfApp1.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="XO Game" Height="300" Width="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center" Margin="50,0,50,0">
        <Label x:Name="lblWelcome"  Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0" FontSize="14"/>
        <Label Height="30"/>
        <Grid x:Name="mainGrid">
        </Grid>
        <Label x:Name="lblResult"  Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" FontSize="14"/>
        <Label Height="30"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30">
            <Button x:Name="btnReplay" Content="Replay" Width="75" Margin =" 0,0,5,0" Click="BtnReplay_Click"/>
            <Button x:Name="btnExit" Content="Exit" Width="75" Margin =" 5,0,0,0" Click="BtnExit_Click"/>
        </StackPanel>
        <Label Height="30"/>
    </StackPanel>
</Window>
